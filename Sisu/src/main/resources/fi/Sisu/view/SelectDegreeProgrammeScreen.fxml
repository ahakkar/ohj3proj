<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minHeight="500.0" minWidth="1024.0" prefWidth="1024.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" prefHeight="40.0">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <children>
            <Label fx:id="studyProgramsLabel" styleClass="screen-label" stylesheets="@styles.css" text="List of available study programs:" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="sortLabel" text="Sort:">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <ToggleButton fx:id="sortToggleButton" mnemonicParsing="false" text="Z-A" />
         </children>
      </HBox>
      <ListView fx:id="dpListView" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: GRAY;" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </ListView>
      <HBox alignment="CENTER" prefWidth="200.0">
         <children>
            <Label fx:id="filterLabel" text="Filter:">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="filterTextField" prefWidth="400.0">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="clearFilterButton" minWidth="100.0" mnemonicParsing="false" prefWidth="100.0" text="Clear filter">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="refreshButton" mnemonicParsing="false" text="Refresh">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="cancelButton" minWidth="100.0" mnemonicParsing="false" prefWidth="100.0" text="Cancel">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="selectStudyProgramButton" minWidth="100.0" mnemonicParsing="false" prefWidth="100.0" text="Select">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
